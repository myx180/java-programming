import java.util.Scanner;  
  
public class Lab2Task13 {  
    public static void main(String[] args) {  
        Scanner scanner = new Scanner(System.in);  
          
        System.out.print("Enter score: ");  
        int score = scanner.nextInt();  
          
        double payIncrease;  
        if (score > 90) {  
            payIncrease = 0.03;  
        } else {  
            payIncrease = 0.01;  
        }  
          
        // For demonstration purposes, we print the pay increase percentage  
        System.out.printf("Pay increase: %.2f%%\n", payIncrease * 100);  
    }  
}
